<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivCheckPopular"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/check_circle"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tvPopular"
        app:layout_constraintBottom_toBottomOf="@id/tvPopular"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTopRated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_rated"
        android:padding="8dp"
        android:textSize="18sp"
       app:layout_constraintTop_toBottomOf="@id/tvPopular"
        />

    <ImageView
        android:id="@+id/ivCheckTopRated"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/check_circle"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tvTopRated"
        app:layout_constraintBottom_toBottomOf="@id/tvTopRated"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAllMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_movies"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvTopRated"
        />

    <ImageView
        android:id="@+id/ivCheckAllMovies"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/check_circle"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvAllMovies"
        app:layout_constraintBottom_toBottomOf="@id/tvAllMovies"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>